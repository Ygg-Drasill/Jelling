meta {
  name: register
  type: http
  seq: 2
}

post {
  url: {{protocol}}://{{address}}:{{port}}{{baseEndpoint}}/account/register
  body: json
  auth: bearer
}

auth:bearer {
  token: {{sessionToken}}
}

body:json {
  {
    "username": "alex",
    "password": "1234"
  }
}

script:post-response {
  if (res.status < 400 && res.body.token != undefined && res.body.token != null) {
    bru.setEnvVar("sessionToken", res.body.token)
  }
}
